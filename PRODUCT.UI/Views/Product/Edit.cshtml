@model PRODUCT.UI.Models.Product.EditProductModel

@{
    ViewData["Title"] = "Edit";
}


<h4>Edit Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Matricule" class="control-label"></label>
                <input asp-for="Matricule" class="form-control" />
                <span asp-validation-for="Matricule" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Slug" class="control-label"></label>
                <input asp-for="Slug" readonly="readonly" class="form-control" />
                <span asp-validation-for="Slug" class="text-danger"></span>
            </div>
            <div  style="float: right" class="form-group">
                <a asp-controller="Product" asp-action="Index"> <button type="button" asp-controller="Product" asp-action="Index" class="btn btn-primary">Cancel</button></a>
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>



@section scripts{
    <script>
        $(document).ready(function () {
            $("#Name").keyup(function(){
                var slug = this.value.replace(/ /g, "_");
                $("#Slug").val(slug);
            });
        });

    </script>
}